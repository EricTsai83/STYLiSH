{
  "hosting": {
    "public": "public/product-app/build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/product",
        "destination": "/index.html"
      },
      {
        "source": "/cart",
        "destination": "/index.html"
      },
      {
        "source": "/home",
        "destination": "/home/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
